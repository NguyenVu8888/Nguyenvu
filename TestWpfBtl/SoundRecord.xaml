<Window x:Class="TestWpfBtl.SoundRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpfBtl"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SoundRecord" Height="450" Width="800">
    <StackPanel>
        <Grid  x:Name="StartEnd" Grid.ColumnSpan="2" Grid.RowSpan="2" Visibility="Collapsed">
            <Border BorderBrush="Maroon" BorderThickness="2" Margin="3">
                <MediaElement Source="D:\bài tập từ VS\wfff\A Sucess\TestWpfBtl\TestWpfBtl\Image\Cad.gif" Stretch="Fill" Height="300" Margin="1" ></MediaElement>
            </Border>
        </Grid>
        <StackPanel Orientation="Horizontal">
            <Button Grid.Column="0" Grid.Row="2" x:Name="StartRecord" Content="Start" Click="StartRecord_Click" Width="100" Height="50" Margin="200 20 200 0"></Button>
            <Button Grid.Column="1" Grid.Row="2" x:Name="StopRecord" Content="Stop" Click="StopRecord_Click" Width="100" Height="50" Margin="0 20 200 0"></Button>
        </StackPanel>
    </StackPanel>
</Window>
